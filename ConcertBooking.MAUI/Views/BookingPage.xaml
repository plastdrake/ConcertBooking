<ContentPage
    x:Class="ConcertBooking.MAUI.Views.BookingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConcertBooking.MAUI.Views"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Bookings">

    <ContentPage.Resources>
        <local:BindingProxy x:Key="ViewModelProxy" Binding="{Binding}" />
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding LogoutCommand}" Text="Logout" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <!--  Available Concerts Section  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Available Concerts" />
            <CollectionView
                x:Name="ConcertsView"
                IsVisible="{Binding IsConcertsView}"
                ItemsSource="{Binding ConcertItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="5"
                            Padding="10"
                            BackgroundColor="LightGray"
                            CornerRadius="5">
                            <VerticalStackLayout>
                                <!--  Concert Title and Description  -->
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding Title}" />
                                <Label FontSize="16" Text="{Binding Description}" />

                                <!--  Performances Indented  -->
                                <CollectionView Margin="10,5,0,5" ItemsSource="{Binding Performances}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame
                                                Margin="5"
                                                Padding="10"
                                                BackgroundColor="LightCyan"
                                                CornerRadius="5">
                                                <VerticalStackLayout>
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="16"
                                                        Text="{Binding Venue}" />
                                                    <Label FontSize="14" Text="{Binding PerformanceDateAndTime, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />
                                                    <Button
                                                        Command="{Binding Source={StaticResource ViewModelProxy}, Path=Binding.BookPerformanceAsyncCommand}"
                                                        CommandParameter="{Binding .}"
                                                        Text="Book" />
                                                </VerticalStackLayout>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  Bookings Section  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Your Bookings" />
            <CollectionView
                x:Name="BookingsView"
                IsVisible="{Binding IsBookingsView}"
                ItemsSource="{Binding Bookings}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="5"
                            Padding="10"
                            BackgroundColor="LightGray"
                            CornerRadius="5">
                            <VerticalStackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding ConcertTitle}" />
                                <Label FontSize="14" Text="{Binding PerformanceDate, StringFormat='Date: {0:dd MMM yyyy}'}" />
                                <Label FontSize="14" Text="{Binding Venue}" />
                                <Button
                                    Command="{Binding Source={StaticResource ViewModelProxy}, Path=Binding.CancelBookingAsyncCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="Cancel Booking" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
